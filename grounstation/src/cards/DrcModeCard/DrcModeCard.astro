---
import CollapsibleCard from '@/components/CollapsibleCard.astro';

interface Props {
  collapsed?: boolean;
}

const { collapsed = false } = Astro.props;
---

<CollapsibleCard
  id="drc-mode-card"
  title="DRC模式管理"
  description="指令飞行控制模式配置与管理"
  icon="settings_remote"
  collapsed={collapsed}
>
  <div class="space-y-6">

    <!-- 1. MQTT中继配置 -->
    <div class="bg-gray-50 rounded-lg p-4">
      <div class="flex items-center space-x-2 mb-4">
        <span class="material-symbols-outlined text-orange-600 text-lg">router</span>
        <span class="font-medium text-sm text-gray-900">MQTT中继配置</span>
      </div>

      <div class="space-y-4">
        <!-- 服务器配置 -->
        <div class="grid grid-cols-2 gap-3">
          <div class="col-span-2">
            <label class="block text-xs font-medium text-gray-700 mb-1">服务器地址</label>
            <input
              type="text"
              id="mqtt-address"
              class="material-input text-xs"
              placeholder="mqtt.dji.com:8883"
            />
            <p class="text-xs text-gray-500 mt-1">格式: host:port</p>
          </div>

          <div>
            <label class="block text-xs font-medium text-gray-700 mb-1">客户端ID (继承长连接)</label>
            <input
              type="text"
              id="mqtt-client-id"
              class="material-input text-xs bg-gray-100"
              placeholder="station-设备SN"
              readonly
            />
            <p class="text-xs text-gray-500 mt-1">自动绑定当前MQTT长连接</p>
          </div>

          <div>
            <label class="block text-xs font-medium text-gray-700 mb-1">
              <input type="checkbox" id="mqtt-anonymous" class="mr-1">
              匿名模式
            </label>
            <p class="text-xs text-gray-500">启用后无需用户名密码</p>
          </div>
        </div>

        <!-- 认证信息 -->
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-gray-700 mb-1">用户名</label>
            <input
              type="text"
              id="mqtt-username"
              class="material-input text-xs"
              placeholder="MQTT用户名"
            />
          </div>

          <div>
            <label class="block text-xs font-medium text-gray-700 mb-1">密码</label>
            <input
              type="password"
              id="mqtt-password"
              class="material-input text-xs"
              placeholder="MQTT密码"
            />
          </div>
        </div>

        <!-- TLS选项 -->
        <div>
          <label class="block text-xs font-medium text-gray-700 mb-1">
            <input type="checkbox" id="mqtt-tls-toggle" class="mr-1" checked>
            启用TLS加密
          </label>
        </div>
      </div>
    </div>

    <!-- 2. 频率配置 -->
    <div class="bg-gray-50 rounded-lg p-4">
      <div class="flex items-center space-x-2 mb-4">
        <span class="material-symbols-outlined text-green-600 text-lg">tune</span>
        <span class="font-medium text-sm text-gray-900">数据频率配置</span>
      </div>

      <div class="space-y-4">
        <!-- OSD频率 -->
        <div>
          <div class="flex justify-between items-center mb-2">
            <label class="text-xs font-medium text-gray-700">OSD数据频率</label>
            <span id="osd-frequency-value" class="text-xs font-medium text-blue-600">10Hz</span>
          </div>
          <input
            type="range"
            id="osd-frequency"
            class="w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer"
            min="1"
            max="500"
            value="10"
            step="1"
          />
          <div class="flex justify-between text-xs text-gray-500 mt-1">
            <span>1Hz</span>
            <span>500Hz</span>
          </div>
        </div>

        <!-- HSI频率 -->
        <div>
          <div class="flex justify-between items-center mb-2">
            <label class="text-xs font-medium text-gray-700">HSI数据频率</label>
            <span id="hsi-frequency-value" class="text-xs font-medium text-green-600">1Hz</span>
          </div>
          <input
            type="range"
            id="hsi-frequency"
            class="w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer"
            min="1"
            max="500"
            value="1"
            step="1"
          />
          <div class="flex justify-between text-xs text-gray-500 mt-1">
            <span>1Hz</span>
            <span>500Hz</span>
          </div>
        </div>
      </div>
    </div>

    <!-- 4. 控制操作 -->
    <div class="bg-gray-50 rounded-lg p-4">
      <div class="flex items-center space-x-2 mb-4">
        <span class="material-symbols-outlined text-purple-600 text-lg">play_arrow</span>
        <span class="font-medium text-sm text-gray-900">DRC模式控制</span>
      </div>

      <!-- 心跳状态指示 -->
      <div class="flex items-center justify-between mb-3 p-2 bg-white rounded border">
        <div class="flex items-center space-x-2">
          <span class="material-symbols-outlined text-red-500 text-lg">favorite</span>
          <span class="text-xs text-gray-700">DRC心跳 (5Hz)</span>
        </div>
        <div class="flex items-center space-x-2">
          <div id="heartbeat-indicator" class="w-2 h-2 rounded-full bg-gray-400"></div>
          <span id="heartbeat-status" class="text-xs text-gray-600">未启动</span>
        </div>
      </div>

      <div class="space-y-3">
        <!-- 进入DRC模式按钮 -->
        <button
          id="enter-drc-btn"
          class="w-full bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors duration-200 flex items-center justify-center space-x-2"
        >
          <span id="enter-btn-spinner" class="hidden">
            <svg class="animate-spin h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
          </span>
          <span class="material-symbols-outlined text-base" id="enter-btn-icon">settings_remote</span>
          <span id="enter-btn-text">进入DRC模式</span>
        </button>

        <!-- 退出DRC模式按钮 -->
        <button
          id="exit-drc-btn"
          class="w-full bg-red-600 hover:bg-red-700 disabled:bg-gray-400 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors duration-200 flex items-center justify-center space-x-2 hidden"
        >
          <span class="material-symbols-outlined text-base">stop</span>
          <span id="exit-btn-text">退出DRC模式</span>
        </button>

        <!-- 操作结果提示 -->
        <div id="operation-result" class="text-xs text-center py-2 hidden"></div>
      </div>
    </div>

    <!-- 4. 操作日志 -->
    <div class="bg-gray-50 rounded-lg p-4">
      <div class="flex items-center justify-between mb-3">
        <div class="flex items-center space-x-2">
          <span class="material-symbols-outlined text-gray-600 text-lg">terminal</span>
          <span class="font-medium text-sm text-gray-900">操作日志</span>
        </div>
        <div class="flex items-center space-x-2">
          <select id="drc-log-filter" class="text-xs border border-gray-300 rounded px-2 py-1 bg-white">
            <option value="all">所有日志</option>
            <option value="错误">仅错误</option>
            <option value="警告">仅警告</option>
            <option value="成功">仅成功</option>
            <option value="信息">仅信息</option>
            <option value="系统">仅系统</option>
          </select>
          <button
            id="clear-drc-logs-btn"
            class="text-xs text-gray-500 hover:text-gray-700 underline"
          >
            清空日志
          </button>
        </div>
      </div>

      <div
        id="drc-logs"
        class="bg-gray-900 text-green-400 p-3 rounded text-xs font-mono h-32 overflow-y-auto"
      >
        <div class="text-gray-500">[系统] DRC模式管理卡片已初始化</div>
      </div>
    </div>

  </div>
</CollapsibleCard>

<script type="module" is:inline>
  import { drcModeCardUI } from '/src/cards/DrcModeCard/controllers/drc-mode-ui.js';

  if (typeof window !== 'undefined') {
    window.drcModeCardUI = drcModeCardUI;
  }
</script>
