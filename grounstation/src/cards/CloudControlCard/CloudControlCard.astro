---
import CollapsibleCard from '@/components/CollapsibleCard.astro';

interface Props {
  collapsed?: boolean;
}

const { collapsed = false } = Astro.props;
---

<CollapsibleCard
  id="cloud-control-card"
  title="云端控制授权"
  description="请求和释放无人机云端飞行控制权"
  icon="cloud_sync"
  collapsed={collapsed}
>
  <div class="space-y-6">

    <!-- 1. 用户配置 -->
    <div class="bg-gray-50 rounded-lg p-4">
      <div class="flex items-center space-x-2 mb-4">
        <span class="material-symbols-outlined text-blue-600 text-lg">person</span>
        <span class="font-medium text-sm text-gray-900">用户信息</span>
      </div>

      <div class="space-y-3">
        <div>
          <label class="block text-xs font-medium text-gray-700 mb-1">设备序列号</label>
          <input
            type="text"
            class="material-input text-xs"
            value=""
            data-config="device-serial"
            placeholder="从设备切换器选择设备"
            readonly
            title="请从顶部设备切换器选择设备"
          />
          <p class="text-xs text-gray-500 mt-1">
            <span class="material-symbols-outlined text-xs align-middle">info</span>
            设备SN由顶部切换器统一管理
          </p>
        </div>

        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-gray-700 mb-1">用户ID</label>
            <input
              type="text"
              class="material-input text-xs"
              value="cloud_user_001"
              data-config="user-id"
              placeholder="输入用户ID"
            />
          </div>

          <div>
            <label class="block text-xs font-medium text-gray-700 mb-1">用户呼号</label>
            <input
              type="text"
              class="material-input text-xs"
              value="CloudPilot"
              data-config="user-callsign"
              placeholder="输入用户昵称"
            />
          </div>
        </div>
      </div>
    </div>

    <!-- 2. 状态显示 -->
    <div class="bg-gray-50 rounded-lg p-4">
      <div class="flex items-center space-x-2 mb-3">
        <span class="material-symbols-outlined text-gray-600 text-lg">info</span>
        <span class="font-medium text-sm text-gray-900">授权状态</span>
      </div>

      <div class="text-xs text-gray-600 space-y-2">
        <div class="flex justify-between">
          <span>当前状态:</span>
          <span id="cloud-status" class="font-medium">未授权</span>
        </div>
        <div class="flex justify-between">
          <span>控制权:</span>
          <span id="control-keys" class="font-medium">-</span>
        </div>
        <div class="flex justify-between">
          <span>MQTT连接:</span>
          <span id="mqtt-status" class="font-medium">未连接</span>
        </div>
      </div>
    </div>

    <!-- 3. 控制操作 -->
    <div class="bg-gray-50 rounded-lg p-4">
      <div class="flex items-center space-x-2 mb-4">
        <span class="material-symbols-outlined text-purple-600 text-lg">flight_takeoff</span>
        <span class="font-medium text-sm text-gray-900">控制操作</span>
      </div>

      <div class="space-y-3">
        <button
          id="request-auth-btn"
          class="w-full bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors duration-200 flex items-center justify-center space-x-2"
        >
          <span class="material-symbols-outlined text-base">lock_open</span>
          <span>请求云端控制授权</span>
        </button>

        <button
          id="release-control-btn"
          class="w-full bg-orange-600 hover:bg-orange-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors duration-200 flex items-center justify-center space-x-2 hidden"
        >
          <span class="material-symbols-outlined text-base">lock</span>
          <span>释放云端控制</span>
        </button>
      </div>
    </div>

    <!-- 4. 日志终端 -->
    <div class="bg-gray-50 rounded-lg p-4">
      <div class="flex items-center justify-between mb-3">
        <div class="flex items-center space-x-2">
          <span class="material-symbols-outlined text-gray-600 text-lg">terminal</span>
          <span class="font-medium text-sm text-gray-900">操作日志</span>
        </div>
        <button
          id="clear-cloud-logs-btn"
          class="text-xs text-gray-500 hover:text-gray-700 underline"
        >
          清空日志
        </button>
      </div>

      <div
        id="cloud-logs"
        class="bg-gray-900 text-green-400 p-3 rounded text-xs font-mono h-32 overflow-y-auto"
      >
        <div class="text-gray-500">[系统] 云端控制授权卡片已初始化</div>
      </div>
    </div>

  </div>
</CollapsibleCard>

<script type="module" is:inline>
  import { cloudControlCardUI } from '/src/cards/CloudControlCard/controllers/cloud-control-ui.js';

  if (typeof window !== 'undefined') {
    window.cloudControlCardUI = cloudControlCardUI;
  }
</script>
