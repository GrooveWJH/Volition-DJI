---
import CollapsibleCard from '@/components/CollapsibleCard.astro';

interface Props {
  collapsed?: boolean;
}

const { collapsed = false } = Astro.props;
---

<CollapsibleCard
  id="cloud-control-card"
  title="云端控制授权"
  description="请求无人机云端飞行控制权"
  icon="cloud_sync"
  collapsed={collapsed}
>
  <div class="space-y-6">

    <!-- 1. 用户配置 -->
    <div class="bg-gray-50 rounded-lg p-4">
      <div class="flex items-center space-x-2 mb-4">
        <span class="material-symbols-outlined text-blue-600 text-lg">person</span>
        <span class="font-medium text-sm text-gray-900">用户信息</span>
      </div>

      <div class="space-y-3">
        <div>
          <label class="block text-xs font-medium text-gray-700 mb-1">设备序列号</label>
          <input
            type="text"
            class="material-input text-xs"
            value=""
            data-config="device-serial"
            placeholder="从设备切换器选择设备"
            readonly
            title="请从顶部设备切换器选择设备"
          />
          <p class="text-xs text-gray-500 mt-1">
            <span class="material-symbols-outlined text-xs align-middle">info</span>
            设备SN由顶部切换器统一管理
          </p>
        </div>

        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-gray-700 mb-1">用户ID</label>
            <input
              type="text"
              class="material-input text-xs"
              value="cloud_user_001"
              data-config="user-id"
              placeholder="输入用户ID"
            />
          </div>

          <div>
            <label class="block text-xs font-medium text-gray-700 mb-1">用户呼号</label>
            <input
              type="text"
              class="material-input text-xs"
              value="CloudPilot"
              data-config="user-callsign"
              placeholder="输入用户昵称"
            />
          </div>
        </div>
      </div>
    </div>

    <!-- 2. 控制操作 -->
    <div class="bg-gray-50 rounded-lg p-4">
      <div class="flex items-center space-x-2 mb-4">
        <span class="material-symbols-outlined text-purple-600 text-lg">flight_takeoff</span>
        <span class="font-medium text-sm text-gray-900">控制操作</span>
      </div>

      <div class="space-y-3">
        <button
          id="request-auth-btn"
          class="w-full bg-green-600 hover:bg-green-700 disabled:bg-gray-400 disabled:cursor-not-allowed text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors duration-200 flex items-center justify-center space-x-2"
        >
          <span id="request-btn-spinner" class="hidden">
            <svg class="animate-spin h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
          </span>
          <span class="material-symbols-outlined text-base" id="request-btn-icon">lock_open</span>
          <span id="request-btn-text">请求云端控制授权</span>
        </button>

        <button
          id="confirm-auth-btn"
          class="w-full bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors duration-200 flex items-center justify-center space-x-2 hidden"
        >
          <span class="material-symbols-outlined text-base">check_circle</span>
          <span>确认已在遥控器上授权</span>
        </button>
      </div>
    </div>

    <!-- 3. 日志终端 -->
    <div class="bg-gray-50 rounded-lg p-4">
      <div class="flex items-center justify-between mb-3">
        <div class="flex items-center space-x-2">
          <span class="material-symbols-outlined text-gray-600 text-lg">terminal</span>
          <span class="font-medium text-sm text-gray-900">操作日志</span>
        </div>
        <div class="flex items-center space-x-2">
          <select id="log-filter" class="text-xs border border-gray-300 rounded px-2 py-1 bg-white">
            <option value="all">所有日志</option>
            <option value="错误">仅错误</option>
            <option value="警告">仅警告</option>
            <option value="成功">仅成功</option>
            <option value="信息">仅信息</option>
          </select>
          <button
            id="clear-cloud-logs-btn"
            class="text-xs text-gray-500 hover:text-gray-700 underline"
          >
            清空日志
          </button>
        </div>
      </div>

      <div
        id="cloud-logs"
        class="bg-gray-900 text-green-400 p-3 rounded text-xs font-mono h-32 overflow-y-auto"
      >
        <div class="text-gray-500">[系统] 云端控制授权卡片已初始化</div>
      </div>
    </div>

  </div>
</CollapsibleCard>

<script type="module" is:inline>
  import { cloudControlCardUI } from '/src/cards/CloudControlCard/controllers/cloud-control-ui.js';

  if (typeof window !== 'undefined') {
    window.cloudControlCardUI = cloudControlCardUI;
  }
</script>
