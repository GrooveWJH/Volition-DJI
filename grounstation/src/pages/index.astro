---
import StreamingCard from '@/cards/StreamingCard/StreamingCard.astro';
import DrcControlCard from '@/cards/DrcControlCard/DrcControlCard.astro';
import DroneDeviceSwitcher from '@/shared/components/DroneDeviceSwitcher.astro';
import { CONFIG } from '@/shared/config/app-config.js';
import '@/styles/global.css';

const defaultRtmpUrl = CONFIG.rtmp.getDefaultUrl();
const defaultHost = CONFIG.rtmp.defaultHost;
---

<html lang="zh" class="h-full">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>无人机地面站控制台</title>
  </head>

  <body class="min-h-screen bg-gray-50 font-sans antialiased">
    <!-- 多机切换器 -->
    <DroneDeviceSwitcher />

    <!-- Header -->
    <header class="bg-white shadow-sm border-b border-gray-200">
      <div class="w-full px-6 py-4">
        <div class="flex items-center justify-between">
          <div class="text-left flex-1">
            <div class="flex items-center justify-left space-x-3">
              <span class="material-symbols-outlined text-blue-600 text-3xl">dashboard</span>
              <h1 class="text-3xl font-bold text-gray-900">无人机地面站控制台</h1>
            </div>
            <p class="text-gray-600">协议对接测试与MQTT控制系统</p>
          </div>

          <!-- 配置管理按钮 -->
          <button
            onclick="showConfigMenu()"
            class="px-3 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 text-sm rounded-lg transition-colors flex items-center"
            title="配置管理"
          >
            <span class="material-symbols-outlined text-lg mr-1">settings</span>
            配置
          </button>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="w-full px-6 py-6 grid grid-cols-1 lg:grid-cols-2 gap-6">

      <!-- Left Column -->
      <div class="space-y-6">
        <!-- RTMP Video Streaming System -->
        <StreamingCard
          playerId="main-video-stream"
          title="视频推流服务"
          description="实时视频推送与播放"
          rtmpUrl={defaultRtmpUrl}
          host={defaultHost}
          collapsed={false}
        />
      </div>

      <!-- Right Column -->
      <div class="space-y-6">
        <!-- DRC Remote Control -->
        <DrcControlCard collapsed={false} />

        <!-- Disabled Modules -->
        <div class="material-card">
          <div
            class="px-6 py-4 border-b border-gray-200 cursor-pointer hover:bg-gray-50 transition-colors"
            onclick="toggleDisabledModules()"
            id="disabledModulesHeader"
          >
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-3">
                <span class="material-symbols-outlined text-gray-400 text-2xl">extension_off</span>
                <div>
                  <h3 class="text-lg font-semibold text-gray-900">其他协议模块</h3>
                  <p class="text-sm text-gray-600 mt-1">暂时禁用的协议模块</p>
                </div>
                <div class="status-indicator status-warning">
                  <span class="material-symbols-outlined text-sm mr-1">pause_circle</span>
                  暂时禁用
                </div>
              </div>
              <span class="material-symbols-outlined text-gray-400 transition-transform duration-200" id="toggleIcon">
                expand_more
              </span>
            </div>
          </div>

          <div
            class="px-6 pb-6 pt-4 space-y-4 hidden transition-all duration-200"
            id="disabledModulesContent"
          >
            <p class="text-sm text-gray-600">
              以下协议模块已暂时禁用，当前专注于视频流媒体功能开发。
            </p>

            <div class="grid gap-4">
              <!-- Disabled Module: 态势感知信息 -->
              <div class="bg-gray-50 rounded-lg p-4 opacity-60 flex items-start space-x-3">
                <span class="material-symbols-outlined text-gray-400 mt-1">visibility</span>
                <div class="flex-1">
                  <h4 class="font-medium text-gray-900 text-sm">态势感知信息</h4>
                  <p class="text-xs text-gray-600 mt-1">无人机目标识别对象信息发送</p>
                  <code class="text-xs text-gray-500 mt-2 block">/jk-ivas/non/controller/postTarPos</code>
                </div>
              </div>

              <!-- Disabled Module: 无人机状态信息 -->
              <div class="bg-gray-50 rounded-lg p-4 opacity-60 flex items-start space-x-3">
                <span class="material-symbols-outlined text-gray-400 mt-1">flight</span>
                <div class="flex-1">
                  <h4 class="font-medium text-gray-900 text-sm">无人机状态信息</h4>
                  <p class="text-xs text-gray-600 mt-1">多无人机状态信息处理</p>
                  <code class="text-xs text-gray-500 mt-2 block">/jk-ivas/third/controller/reportUserData</code>
                </div>
              </div>

              <!-- Disabled Module: 无人机控制指令 -->
              <div class="bg-gray-50 rounded-lg p-4 opacity-60 flex items-start space-x-3">
                <span class="material-symbols-outlined text-gray-400 mt-1">settings_remote</span>
                <div class="flex-1">
                  <h4 class="font-medium text-gray-900 text-sm">无人机控制指令</h4>
                  <p class="text-xs text-gray-600 mt-1">头显服务器控制指令</p>
                  <code class="text-xs text-gray-500 mt-2 block">/dev-api/jk-uav/third/controller/uav/droneCtrl</code>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

    </main>

    <!-- Scripts -->
    <script type="module" src="/src/scripts/main.js" is:inline></script>
    <script type="module" src="/src/shared/core/storage.js" is:inline></script>
    <script type="module" src="/src/scripts/page-manager.js" is:inline></script>
  </body>
</html>
