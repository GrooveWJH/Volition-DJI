---
import '@/styles/global.css';
---

<html lang="zh" class="h-full">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DJI Ground Station - Debug Console</title>
    <link rel="stylesheet" href="/styles/debug-console.css">
  </head>

  <body class="min-h-screen bg-gray-900 text-gray-100 font-sans antialiased">
    <!-- Header -->
    <header class="bg-gray-800 shadow-lg border-b border-gray-700 fixed top-0 left-0 right-0 z-50">
      <div class="max-w-full px-6 py-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-4">
            <h1 class="text-xl font-bold text-white">DJI Debug Console</h1>
            <span id="log-count" class="filter-badge bg-blue-900 text-blue-200">0 logs</span>
            <span id="connection-status" class="filter-badge bg-gray-700 text-gray-300">Disconnected</span>
          </div>

          <div class="flex items-center space-x-3">
            <button id="auto-collapse-btn" class="filter-badge bg-purple-900 text-purple-200 hover:bg-purple-800 cursor-pointer">
              Auto Collapse: ON
            </button>
            <button id="auto-scroll-btn" class="filter-badge bg-green-900 text-green-200 hover:bg-green-800 cursor-pointer">
              Auto Scroll: ON
            </button>
            <button id="clear-logs" class="filter-badge bg-red-900 text-red-200 hover:bg-red-800 cursor-pointer">
              Clear Logs
            </button>
            <button id="export-logs" class="filter-badge bg-purple-900 text-purple-200 hover:bg-purple-800 cursor-pointer">
              Export
            </button>
            <a href="/" class="filter-badge bg-gray-700 text-gray-300 hover:bg-gray-600 no-underline">
              Back to Station
            </a>
          </div>
        </div>
      </div>
    </header>

    <div class="flex h-screen pt-16">
      <!-- Sidebar - Fixed -->
      <div class="w-80 bg-gray-800 border-r border-gray-700 p-4 fixed left-0 top-16 bottom-0 overflow-y-auto">
        <!-- Filters -->
        <div class="mb-6">
          <h3 class="text-sm font-semibold text-gray-400 mb-3">FILTERS</h3>

          <!-- Search -->
          <div class="mb-4">
            <input
              id="search-input"
              type="text"
              placeholder="Search logs..."
              class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md text-sm text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
          </div>

          <!-- Level Filters -->
          <div class="mb-4">
            <label class="text-xs font-medium text-gray-400 mb-2 block">LOG LEVELS</label>
            <div class="space-y-1">
              <label class="flex items-center">
                <input type="checkbox" class="level-filter mr-2" value="ALL" checked />
                <span class="text-sm">All Levels</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" class="level-filter mr-2" value="ERROR" checked />
                <span class="text-sm text-red-400">‚ùå Errors</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" class="level-filter mr-2" value="WARN" checked />
                <span class="text-sm text-yellow-400">‚ö†Ô∏è Warnings</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" class="level-filter mr-2" value="INFO" checked />
                <span class="text-sm text-blue-400">‚ÑπÔ∏è Info</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" class="level-filter mr-2" value="DEBUG" checked />
                <span class="text-sm text-gray-400">üîç Debug</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" class="level-filter mr-2" value="MQTT" checked />
                <span class="text-sm text-green-400">üì° MQTT</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" class="level-filter mr-2" value="STATE" checked />
                <span class="text-sm text-purple-400">üìä State</span>
              </label>
              <label class="flex items-center">
                <input type="checkbox" class="level-filter mr-2" value="SERVICE" checked />
                <span class="text-sm text-cyan-400">üîß Service</span>
              </label>
            </div>
          </div>

          <!-- Source Filters -->
          <div class="mb-4">
            <label class="text-xs font-medium text-gray-400 mb-2 block">SOURCE FILES</label>
            <div id="source-filters" class="space-y-1 text-sm">
              <!-- Dynamically populated -->
            </div>
          </div>

          <!-- Time Range -->
          <div class="mb-4">
            <label class="text-xs font-medium text-gray-400 mb-2 block">TIME RANGE</label>
            <select id="time-range" class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md text-sm text-white">
              <option value="all">All Time</option>
              <option value="1m">Last 1 minute</option>
              <option value="5m">Last 5 minutes</option>
              <option value="1h">Last 1 hour</option>
              <option value="today" selected>Today</option>
            </select>
          </div>
        </div>

        <!-- Stats -->
        <div class="border-t border-gray-700 pt-4">
          <h3 class="text-sm font-semibold text-gray-400 mb-3">STATISTICS</h3>
          <div id="log-stats" class="space-y-2 text-sm">
            <!-- Dynamically populated -->
          </div>
        </div>
      </div>

      <!-- Main Content -->
      <div class="flex-1 flex flex-col ml-80">
        <!-- Log Container -->
        <div class="flex-1 overflow-hidden pb-12">
          <div id="log-container" class="h-full overflow-y-auto auto-scroll console-text bg-gray-900">
            <div id="log-list" class="p-4 space-y-1">
              <div class="text-gray-500 text-center py-8">
                <div class="text-4xl mb-2">üîç</div>
                <div>Waiting for log messages...</div>
                <div class="text-sm mt-2">Open the Ground Station to see logs in real-time</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Status Bar - Fixed -->
        <div class="bg-gray-800 border-t border-gray-700 px-4 py-2 text-sm text-gray-400 fixed bottom-0 left-80 right-0">
          <div class="flex justify-between items-center">
            <div>
              <span id="visible-count">0</span> visible of
              <span id="total-count">0</span> total logs
            </div>
            <div id="last-update">Never updated</div>
          </div>
        </div>
      </div>
    </div>

    <script src="/scripts/debug-console.js" is:inline></script>
  </body>
</html>