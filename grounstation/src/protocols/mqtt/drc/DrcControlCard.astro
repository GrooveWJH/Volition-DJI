---
import CollapsibleCard from '@/shared/components/CollapsibleCard.astro';
import { CONFIG } from '@/shared/config/app-config.js';

interface Props {
  collapsed?: boolean;
}

const { collapsed = false } = Astro.props;
const drcConfig = CONFIG.drc;
---

<CollapsibleCard 
  id="drc-control-card"
  title="DRC远程控制"
  description="请求并执行DJI DRC(Direct Remote Control)模式"
  icon="flight"
  statusText="未激活"
  statusType="info"
  collapsed={collapsed}
>
  <div class="space-y-6">
    
    <!-- 1. 配置区域 -->
    <div class="bg-gray-50 rounded-lg p-4">
      <div class="flex items-center space-x-2 mb-4">
        <span class="material-symbols-outlined text-blue-600 text-lg">settings</span>
        <span class="font-medium text-sm text-gray-900">设备配置</span>
      </div>
      
      <div class="space-y-3">
        <div>
          <label class="block text-xs font-medium text-gray-700 mb-1">设备序列号</label>
          <input
            type="text"
            class="material-input text-xs"
            value={drcConfig.defaultSerialNumber}
            data-config="device-serial"
            data-storage-key="drc-device-serial"
            placeholder="1ZNDH7C0010001"
          />
        </div>
        
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-gray-700 mb-1">超时时间(秒)</label>
            <input
              type="number"
              class="material-input text-xs"
              value={drcConfig.timeoutSeconds}
              data-config="timeout"
              data-storage-key="drc-timeout"
              placeholder="30"
            />
          </div>
          
          <div>
            <label class="block text-xs font-medium text-gray-700 mb-1">重试次数</label>
            <input
              type="number"
              class="material-input text-xs"
              value={drcConfig.maxRetries}
              data-config="retries"
              data-storage-key="drc-retries"
              placeholder="3"
            />
          </div>
        </div>
      </div>
    </div>

    <!-- 2. 状态显示 -->
    <div class="bg-gray-50 rounded-lg p-4">
      <div class="flex items-center space-x-2 mb-3">
        <span class="material-symbols-outlined text-gray-600 text-lg">info</span>
        <span class="font-medium text-sm text-gray-900">状态信息</span>
      </div>
      
      <div class="text-xs text-gray-600 space-y-2">
        <div class="flex justify-between">
          <span>当前状态:</span>
          <span id="current-status" class="font-medium">待机</span>
        </div>
        <div class="flex justify-between">
          <span>设备连接:</span>
          <span id="device-connection" class="font-medium">未连接</span>
        </div>
        <div class="flex justify-between">
          <span>授权状态:</span>
          <span id="auth-status" class="font-medium">未授权</span>
        </div>
      </div>
    </div>

    <!-- 3. 主要内容 - 工作流状态 -->
    <div class="bg-gray-50 rounded-lg p-4">
      <div class="flex items-center space-x-2 mb-4">
        <span class="material-symbols-outlined text-green-600 text-lg">timeline</span>
        <span class="font-medium text-sm text-gray-900">工作流状态</span>
      </div>
      
      <div id="workflow-progress" class="space-y-3">
        <!-- 动态生成的工作流步骤 -->
      </div>
    </div>

    <!-- 4. 控制操作 -->
    <div class="bg-gray-50 rounded-lg p-4">
      <div class="flex items-center space-x-2 mb-4">
        <span class="material-symbols-outlined text-purple-600 text-lg">control_camera</span>
        <span class="font-medium text-sm text-gray-900">操作控制</span>
      </div>
      
      <div class="space-y-3">
        <div class="flex space-x-3">
          <button 
            id="start-drc-btn" 
            class="flex-1 bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors duration-200 flex items-center justify-center space-x-2"
          >
            <span class="material-symbols-outlined text-base">play_arrow</span>
            <span>开始DRC流程</span>
          </button>
          
          <button 
            id="cancel-drc-btn" 
            class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors duration-200 flex items-center justify-center space-x-2 hidden"
          >
            <span class="material-symbols-outlined text-base">stop</span>
            <span>取消</span>
          </button>
        </div>
        
        <button 
          id="confirm-auth-btn" 
          class="w-full bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors duration-200 flex items-center justify-center space-x-2 hidden"
        >
          <span class="material-symbols-outlined text-base">check_circle</span>
          <span>确认授权</span>
        </button>
        
        <button 
          id="exit-drc-btn" 
          class="w-full bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors duration-200 flex items-center justify-center space-x-2 hidden"
        >
          <span class="material-symbols-outlined text-base">exit_to_app</span>
          <span>退出DRC模式</span>
        </button>
      </div>
    </div>

    <!-- 5. 日志终端 -->
    <div class="bg-gray-50 rounded-lg p-4">
      <div class="flex items-center justify-between mb-3">
        <div class="flex items-center space-x-2">
          <span class="material-symbols-outlined text-gray-600 text-lg">terminal</span>
          <span class="font-medium text-sm text-gray-900">操作日志</span>
        </div>
        <button 
          id="clear-drc-logs-btn" 
          class="text-xs text-gray-500 hover:text-gray-700 underline"
        >
          清空日志
        </button>
      </div>
      
      <div 
        id="drc-logs" 
        class="bg-gray-900 text-green-400 p-3 rounded text-xs font-mono h-32 overflow-y-auto"
      >
        <div class="text-gray-500">[系统] DRC控制卡片已初始化</div>
      </div>
    </div>

  </div>
</CollapsibleCard>

<script type="module" is:inline>
  import { drcControlCardUI } from './controllers/drc-control-ui.js';
  
  if (typeof window !== 'undefined') {
    window.drcControlCardUI = drcControlCardUI;
  }
</script>