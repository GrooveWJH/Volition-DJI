---
import { CONFIG } from '../../../../shared/config/app-config.js';

const mqttConfig = CONFIG.mqtt;
---

<!-- MQTT连接配置 -->
<div class="bg-gray-50 rounded-lg p-4">
  <div class="flex items-center space-x-2 mb-4">
    <span class="material-symbols-outlined text-blue-600 text-lg">settings_ethernet</span>
    <span class="font-medium text-sm text-gray-900">MQTT连接配置</span>
  </div>
  
  <div class="grid grid-cols-2 gap-4">
    <div>
      <label class="block text-xs font-medium text-gray-700 mb-1">MQTT主机地址</label>
      <input
        type="text"
        class="material-input text-xs"
        value={mqttConfig.defaultHost}
        data-config="mqtt-host"
        data-storage-key="mqtt-host"
        placeholder="127.0.0.1"
      />
    </div>
    
    <div>
      <label class="block text-xs font-medium text-gray-700 mb-1">MQTT端口</label>
      <input
        type="number"
        class="material-input text-xs"
        value={mqttConfig.defaultPort}
        data-config="mqtt-port"
        data-storage-key="mqtt-port"
        placeholder="1883"
      />
    </div>
    
    <div>
      <label class="block text-xs font-medium text-gray-700 mb-1">用户名</label>
      <input
        type="text"
        class="material-input text-xs"
        value={mqttConfig.defaultUsername}
        data-config="mqtt-username"
        data-storage-key="mqtt-username"
        placeholder="admin"
      />
    </div>
    
    <div>
      <label class="block text-xs font-medium text-gray-700 mb-1">密码</label>
      <input
        type="password"
        class="material-input text-xs"
        value={mqttConfig.defaultPassword}
        data-config="mqtt-password"
        data-storage-key="mqtt-password"
        placeholder="password"
      />
    </div>
  </div>
</div>