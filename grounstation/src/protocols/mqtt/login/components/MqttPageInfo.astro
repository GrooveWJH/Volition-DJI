---
// 生成的页面信息显示组件
---

<!-- 生成的页面信息 -->
<div id="generated-page-info" class="bg-green-50 border border-green-200 rounded-lg p-4 hidden">
  <div class="flex items-center space-x-2 mb-3">
    <span class="material-symbols-outlined text-green-600 text-lg">check_circle</span>
    <span class="font-medium text-sm text-green-800">登录页面已生成</span>
  </div>
  
  <div class="space-y-3">
    <div class="text-xs text-green-700">
      <span class="font-medium">生成时间:</span>
      <span id="generation-time"></span>
    </div>
    
    <div class="flex space-x-2">
      <button 
        id="preview-page-btn" 
        class="flex-1 bg-green-600 hover:bg-green-700 text-white px-3 py-2 rounded text-xs font-medium transition-colors duration-200"
      >
        预览页面
      </button>
      
      <button 
        id="download-page-btn" 
        class="flex-1 bg-blue-600 hover:bg-blue-700 text-white px-3 py-2 rounded text-xs font-medium transition-colors duration-200"
      >
        下载页面
      </button>
    </div>
  </div>
</div>